{
    "name": "MouseHunt Dark Mode",
    "description": "Dark mode for MouseHunt's browser version",
    "version": "0.1.47",
    "manifest_version": 3,
    "permissions": [],
    "action": {
        "default_popup": "ui/popup.html",
        "default_icons": {
            "16": "assets/icon.png",
            "32": "assets/icon.png",
            "48": "assets/icon.png",
            "128": "assets/icon.png"
        }
    },
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.mousehuntgame.com/*"
            ],
            "css": [
                "css/main.css",
                "css/camp/camp.css",
                "css/camp/journal.css",
                "css/camp/trap.css",
                "css/header/giftbox.css",
                "css/header/header.css",
                "css/header/inbox.css",
                "css/pages/friends.css",
                "css/pages/inventory.css",
                "css/pages/mice.css",
                "css/pages/profile.css",
                "css/pages/scoreboard.css",
                "css/pages/shop.css",
                "css/pages/treasuremap.css"
            ]
        }
    ]
}
